<!DOCTYPE html>
<html ng-app="stocksFinance">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Stock Quote Checker</title>
        @Styles.Render("~/Content/css")
    <link href="~/Content/jquery-ui-1.10.4.custom.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="top">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Stocks & Finance", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Links<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">a</a></li>
                            <li><a href="#">b</a></li>
                            <li><a href="#">c</a></li>
                            <li class="divider"></li>
                            <li><a href="#">more info</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content someSpace" ng-controller="financeCtrl">
        @RenderBody()
        <hr />
        <footer>
            <p class="pull-right"><a href="#top">Back to top</a></p>
            <p>&copy; @DateTime.Now.Year - Puree Corp.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/customs")
    @Scripts.Render("~/Content/Angular")
</body>
</html>
